<Page
    x:Class="App1.InfoClient"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <!--PAGE QUAND LE CLIENT EST CONNECTÉ -->
        <TextBlock x:Name="tblTitre" Text="Trajet en cours" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,50"/>
        
        <!--LISTVIEW QUI AFFICHE TOUS MES TRAJETS EN COURS + AVEC UN NOMBRE DE PLACE > 0 -->
        <ListView x:Name="lvTrajetClient" HorizontalAlignment="Center" Header="Sélectionnez un trajet:" Margin="0,0,0,30"></ListView>
        
        <!--BOUTON POUR EMBARQUER-->
        <Button x:Name="btEmbarquer" Content="Embarquer" Click="btEmbarquer_Click" HorizontalAlignment="Center" Margin="0,0,0,50"></Button>
    </StackPanel>
</Page>
